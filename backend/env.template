# Auto-Promoter Backend Environment Variables
# Copy this to .env and fill in your values

NODE_ENV=development
PORT=5000

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Social Media API Rate Limiting
FACEBOOK_RATE_LIMIT=200
INSTAGRAM_RATE_LIMIT=100
YOUTUBE_RATE_LIMIT=10000
LINKEDIN_RATE_LIMIT=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Database (for future use)
# DATABASE_URL=mongodb://localhost:27017/auto-promoter
# REDIS_URL=redis://localhost:6379

# External Services
# OPENAI_API_KEY=your-openai-api-key
# SENTRY_DSN=your-sentry-dsn

